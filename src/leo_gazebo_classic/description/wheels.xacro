<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:macro name="wheels" params="parent">
        <!-- All your wheel links and joints here -->
        <!-- Wheels -->
        <link name="wheel_fl">
            <visual>
                <geometry>
                    <cylinder radius="0.0645" length="0.065"/> 
                </geometry>
                <material name="black"/>
            </visual>
            <collision>
                <geometry>
                    <cylinder radius="0.0645" length="0.065"/> 
                </geometry>
            </collision>
            <inertial>
                <mass value="0.5"/>
                <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
            </inertial>
        </link>
        
        <joint name="wheel_fl_chassis" type="continuous">
            <origin xyz="0.1475 0.177 0.0" rpy="-1.5708 0 0"/>
            <parent link="${parent}"/>
            <child link="wheel_fl"/>
            <axis xyz="0 0 1"/>
            <dynamics damping="0.7" friction="1.0"/>
        </joint>

        <link name="wheel_fr">

<?xml version="1.0"?>
<robot name="leo" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <!-- Base Link -->
    <link name="base_link">
       
    </link>

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="0.0 0.0 0.0645"/>
    </joint>

    <!-- Chassis Link -->
    <link name="chassis">
        <visual>
            <origin xyz="0.0 0.0 0.0895"/>
            <geometry>
                <box size="0.295 0.289 0.092"/>
            </geometry>
            <material name="red"/>
        </visual>
        <collision>  <!-- Add this -->
            <origin xyz="0.0 0.0 0.0895"/>
            <geometry>
                <box size="0.295 0.289 0.092"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="10"/>
            <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
        </inertial>
    </link>

    <!-- Wheel links and joints-->
    <link name="wheel_fl">
        <visual>
            <geometry>
                <cylinder radius="0.0645" length="0.065"/> 
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.0645" length="0.065"/> 
            </geometry>
        </collision>
        <inertial>
            <mass value="0.5"/>
            <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
        </inertial>
    </link>
    
    <joint name="wheel_fl_chassis" type="continuous">
        <origin xyz="0.1475 0.177 0.0" rpy="-1.5708 0 0"/>
        <parent link="chassis"/>
        <child link="wheel_fl"/>
        <axis xyz="0 0 1"/>
        <dynamics damping="0.7" friction="1.0"/>
    </joint>

    <link name="wheel_fr">
        <visual>
            <geometry>
                <cylinder radius="0.0645" length="0.065"/> 
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.0645" length="0.065"/> 
            </geometry>
        </collision>
        <inertial>
            <mass value="0.5"/>
            <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
        </inertial>
    </link>
    
    <joint name="wheel_fr_chassis" type="continuous">
        <origin xyz="0.1475 -0.177 0.0" rpy="-1.5708 0 0"/>
        <parent link="chassis"/>
        <child link="wheel_fr"/>
        <axis xyz="0 0 1"/>
        <dynamics damping="0.7" friction="1.0"/>
    </joint>

    <link name="wheel_rl">
        <visual>
            <geometry>
                <cylinder radius="0.0645" length="0.065"/> 
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.0645" length="0.065"/> 
            </geometry>
        </collision>
        <inertial>
            <mass value="0.5"/>
            <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
        </inertial>
    </link>
    
    <joint name="wheel_rl_chassis" type="continuous">
        <origin xyz="-0.1475 0.177 0.0" rpy="-1.5708 0 0"/>
        <parent link="chassis"/>
        <child link="wheel_rl"/>
        <axis xyz="0 0 1"/>
        <dynamics damping="0.7" friction="1.0"/>
    </joint>

    <link name="wheel_rr">
        <visual>
            <geometry>
                <cylinder radius="0.0645" length="0.065"/> 
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.0645" length="0.065"/> 
            </geometry>
        </collision>
        <inertial>
            <mass value="0.5"/>
            <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
        </inertial>
    </link>
    
    <joint name="wheel_rr_chassis" type="continuous">
        <origin xyz="-0.1475 -0.177 0.0" rpy="-1.5708 0 0"/>
        <parent link="chassis"/>
        <child link="wheel_rr"/>
        <axis xyz="0 0 1"/>
        <dynamics damping="0.7" friction="1.0"/>
    </joint>

    <!-- Jetson Mount -->
    <link name="jetson_mount">
        <visual>
            <geometry>
                <box size="0.110 0.123 0.053"/>
            </geometry>
            <material name="black"/>  <!-- or whatever color you want -->
        </visual>
        <collision>
            <geometry>
                <box size="0.110 0.123 0.053"/>
            </geometry>
        </collision>
    </link>

    <joint name="jetson_mount_joint" type="fixed">
        <parent link="chassis"/>
        <child link="jetson_mount"/>
        <origin xyz="0.05 0 0.162" rpy="0 0 0"/>
    </joint>

    <!-- Lidar -->
    <link name="velodyne">
        <visual>
            <geometry>
                <cylinder radius="0.0516" length="0.0717"/>
            </geometry>
            <material name="dark_blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.0516" length="0.0717"/>
            </geometry>
        </collision>
    </link>

    <joint name="velodyne_joint" type="fixed">
        <parent link="chassis"/>
        <child link="velodyne"/>
        <origin xyz="0.05 0 0.22435" rpy="0 0 0"/>
    </joint>


    <material name="black">
    <color rgba="0.0 0.0 0.0 1.0"/>
    </material>

    <material name="dark_blue">
    <color rgba="0.0 0.2 0.5 1.0"/>
    </material>

    <material name="red">
        <color rgba="1.0 0.0 0.0 1.0"/>
    </material>


    <!-- Controller type -->
    <gazebo>
        <plugin name="differential_drive_controller" filename="libgazebo_ros_diff_drive.so">
            <update_rate>30.0</update_rate>
            
            <num_wheel_pairs>2</num_wheel_pairs>
            
            <left_joint>wheel_fl_chassis</left_joint>
            <left_joint>wheel_rl_chassis</left_joint>
            <right_joint>wheel_fr_chassis</right_joint>
            <right_joint>wheel_rr_chassis</right_joint>
            
            <wheel_separation>0.354</wheel_separation>
            <wheel_diameter>0.129</wheel_diameter>
            
            <max_wheel_torque>200</max_wheel_torque>
            <max_wheel_acceleration>10.0</max_wheel_acceleration>
            
            <command_topic>cmd_vel</command_topic>
            <odometry_topic>odom</odometry_topic>
            <odometry_frame>odom</odometry_frame>
            <robot_base_frame>base_link</robot_base_frame>
            
            <publish_odom>true</publish_odom>
            <publish_odom_tf>true</publish_odom_tf>
            <publish_wheel_tf>true</publish_wheel_tf>
        </plugin>
    </gazebo>

    <gazebo reference="chassis">
        <material>Gazebo/Red</material>
    </gazebo>

    <gazebo reference="wheel_fl">
        <material>Gazebo/Black</material>
    </gazebo>

    <gazebo reference="wheel_fr">
        <material>Gazebo/Black</material>
    </gazebo>

    <gazebo reference="wheel_rl">
        <material>Gazebo/Black</material>
    </gazebo>

    <gazebo reference="wheel_rr">
        <material>Gazebo/Black</material>
    </gazebo>

    <gazebo reference="velodyne">
        <material>Gazebo/Black</material>
    </gazebo>


    <!-- Lidar Parameters-->
    <gazebo reference="velodyne">
        <sensor type="ray" name="velodyne_sensor">
            <pose>0 0 0 0 0 0</pose>
            <visualize>false</visualize>
            <update_rate>10</update_rate>
            <ray>
                <scan>
                    <horizontal>
                        <samples>360</samples>
                        <resolution>1</resolution>
                        <min_angle>0.0</min_angle>
                        <max_angle>6.28319</max_angle>
                    </horizontal>
                    <vertical>
                        <samples>16</samples>
                        <resolution>1</resolution>
                        <min_angle>-0.261799</min_angle>
                        <max_angle>0.261799</max_angle>
                    </vertical>
                </scan>
                <range>
                    <min>0.1</min>
                    <max>100.0</max>
                    <resolution>0.01</resolution>
                </range>
            </ray>
            <plugin name="gazebo_ros_velodyne_laser" filename="libgazebo_ros_velodyne_laser.so">
                <ros>
                    <remapping>~/out:=velodyne_points</remapping>
                </ros>
                <output_type>sensor_msgs/PointCloud2</output_type>
                <frame_name>velodyne</frame_name>
            </plugin>
        </sensor>
    </gazebo>

    <!-- State publisher -->
    <gazebo>
        <plugin name="gazebo_ros_joint_state_publisher" filename="libgazebo_ros_joint_state_publisher.so">
            <update_rate>50</update_rate>
            <joint_name>wheel_fl_chassis</joint_name>
            <joint_name>wheel_fr_chassis</joint_name>
            <joint_name>wheel_rl_chassis</joint_name>
            <joint_name>wheel_rr_chassis</joint_name>
        </plugin>
    </gazebo>
</robot>